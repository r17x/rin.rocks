{
  "name": "@ri7nz/rocks",
  "version": "0.0.0",
  "repository": "r17x/rin.rocks",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "preexport": "yarn build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "patch-package",
    "format": "remark . --quiet --frail --output"
  },
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "remark-preset-lint-recommended"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next"
    ],
    "overrides": [
      {
        "files": [
          "content/posts/*.md",
          "content/posts/*.mdx"
        ],
        "extends": [
          "plugin:mdx/recommended"
        ]
      }
    ],
    "plugins": [
      "simple-import-sort",
      "unused-imports"
    ],
    "rules": {
      "no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@chakra-icons/bootstrap": "^1",
    "@chakra-ui/react": "^2",
    "@code-hike/mdx": "^0",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@giscus/react": "^2.2.0",
    "@mdx-js/loader": "^2",
    "@mdx-js/react": "^2",
    "@next/mdx": "^12",
    "@ri7nz/favicons-compiled": "0.0.5",
    "@ri7nz/favicons-compiled-cli": "0.0.7",
    "@vercel/analytics": "^0",
    "@vercel/og": "^0.0.20",
    "eslint": "^8",
    "framer-motion": "^5",
    "globby": "^13",
    "hast-util-from-html": "^1.0.0",
    "mdx-mermaid": "^1.3",
    "mermaid": "^9",
    "next": "^13",
    "next-mdx-remote": "^4",
    "next-seo": "^5",
    "ramda": "^0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-stringify": "^9",
    "remark-frontmatter": "^4",
    "remark-gfm": "^3",
    "remark-github": "^11",
    "remark-mdx-images": "^1",
    "remark-reading-time": "^2",
    "shiki": "^0"
  },
  "devDependencies": {
    "babel-plugin-macros": "^2",
    "eslint-config-kentcdodds": "^20",
    "eslint-config-next": "^13",
    "eslint-plugin-mdx": "^1",
    "eslint-plugin-simple-import-sort": "^8",
    "eslint-plugin-unused-imports": "^2",
    "fetch.macro": "^1.9",
    "patch-package": "^6.5.1",
    "remark-cli": "^10",
    "remark-lint": "^9",
    "remark-preset-lint-recommended": "^6",
    "unist-util-visit": "^2"
  },
  "optionalDependencies": {
    "webpack": "*"
  },
  "packageManager": "yarn@3.3.0"
}
