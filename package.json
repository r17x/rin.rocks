{
  "name": "@ri7nz/rocks",
  "version": "0",
  "repository": "r17x/rin.rocks",
  "private": true,
  "scripts": {
    "postinstall": "patch-package",
    "dev": "next dev",
    "prebuild": "yarn favicons-compiled -i public/r17x.png -o public/assets --config favicons.config.json --html public/meta-tags.html --jsx components/meta-tags.js",
    "build": "yarn lint --fix=true && next build",
    "preexport": "yarn build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "format": "remark . --quiet --frail --output"
  },
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      "remark-preset-lint-recommended"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next"
    ],
    "overrides": [
      {
        "files": [
          "content/posts/*.md",
          "content/posts/*.mdx"
        ],
        "extends": [
          "plugin:mdx/recommended"
        ]
      }
    ],
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "resolutions": {
    "favicons-compiled": "./patches/favicons-compiled-v0.0.5.tgz"
  },
  "dependencies": {
    "@chakra-icons/bootstrap": "^1",
    "@chakra-ui/react": "^2",
    "@code-hike/mdx": "^0",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@giscus/react": "^2.2.0",
    "@mdx-js/loader": "^2",
    "@mdx-js/react": "^2",
    "@next/mdx": "^12",
    "@vercel/og": "^0.0.20",
    "favicons-compiled": "./patches/favicons-compiled-v0.0.5.tgz",
    "favicons-compiled-cli": "./patches/favicons-compiled-cli-v0.0.5.tgz",
    "framer-motion": "^5",
    "globby": "^13",
    "mdx-mermaid": "^1",
    "mermaid": "^9",
    "next": "^13",
    "next-mdx-remote": "^4",
    "next-seo": "^5",
    "ramda": "^0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-mermaid2": "^0.1.4",
    "rehype-stringify": "^9",
    "remark-frontmatter": "^4",
    "remark-gfm": "^3",
    "remark-github": "^11",
    "remark-mdx-images": "^1",
    "remark-reading-time": "^2",
    "shiki": "^0"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-kdnj": "^2",
    "eslint-config-next": "^13.0.1",
    "eslint-plugin-mdx": "^1",
    "eslint-plugin-unused-imports": "^2",
    "fetch.macro": "^1",
    "patch-package": "^6",
    "remark-cli": "^10",
    "remark-lint": "^9",
    "remark-preset-lint-recommended": "^6"
  }
}
